  <script>
    // facts + love lines (the ones you asked for)
    const slides = [
      {fact: 'Did you know Spiderman was only 15 when he first became a superhero?', love: '‚Ä¶and I was born ready to love you forever.'},
      {fact: 'Did you know Spiderman\'s webs can hold up to 120 pounds per strand?', love: '‚Ä¶but nothing can hold me tighter than your arms.'},
      {fact: 'Did you know Spiderman can sense danger from miles away?', love: '‚Ä¶and my heart can sense you from even farther.'},
      {fact: 'Did you know Spiderman once lifted over 10 tons?', love: '‚Ä¶but my love for you weighs even more.'},
      {fact: 'Did you know Spiderman has faced over 200 villains in his lifetime?', love: '‚Ä¶and I\'d fight every single one for you.'},
      {fact: 'Did you know Spiderman\'s fastest web swing speed is around 60 mph?', love: '‚Ä¶but I\'d swing to you even faster.'},
      {fact: 'Did you know Spiderman wears a mask to protect his identity?', love: '‚Ä¶but I\'d take mine off just to smile at you.'},
      {fact: 'Did you know Spiderman once teamed up with the Avengers?', love: '‚Ä¶but my favorite team will always be you and me.'},
      {fact: 'Did you know Spiderman can stick to almost any surface?', love: '‚Ä¶and my heart\'s stuck to you forever.'},
      {fact: 'Did you know Spiderman\'s motto is ‚ÄúWith great power comes great responsibility‚Äù?', love: '‚Ä¶and my greatest responsibility is loving you.'}
    ];

    const bubble = document.getElementById('factText');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const dotsWrap = document.getElementById('dots');
    const secretBtn = document.getElementById('secretBtn');
    const modal = document.getElementById('modal');
    const closeLetter = document.getElementById('closeLetter');

    let index = -1; // start before the first
    let typingTimer = null;

    function makeDots(){
      dotsWrap.innerHTML = '';
      for(let i=0;i<slides.length;i++){
        const d = document.createElement('div');d.className='dot';if(i===0)d.classList.add('active');dotsWrap.appendChild(d);
      }
    }
    makeDots();

    function updateDots(i){
      const dots = dotsWrap.querySelectorAll('.dot');dots.forEach((d,idx)=>{d.classList.toggle('active', idx===i)});
    }

    // typewriter-ish reveal
    function showSlide(i){
      if(i<0) i=0; if(i>=slides.length) i=slides.length-1;
      index = i;
      updateDots(index);
      const text = `<strong>${slides[index].fact}</strong><span class="love">${slides[index].love}</span>`;
      // fade out, then set, then animate
      bubble.style.opacity=0;setTimeout(()=>{
        bubble.innerHTML = '<span style="opacity:0;display:inline-block;transform:translateY(6px);">'+text+'</span>';
        const child = bubble.querySelector('span');
        child.animate([{opacity:0, transform:'+'"translateY(8px)"+''},{opacity:1, transform:'translateY(0)'}],{duration:420,easing:'cubic-bezier(.2,.9,.2,1)'});
        bubble.style.opacity=1;
      },160);

      // reveal secret button if last
      if(index === slides.length - 1){
        secretBtn.classList.add('revealed');
      } else {
        secretBtn.classList.remove('revealed');
      }
    }

    nextBtn.addEventListener('click', ()=>{
      if(index < slides.length - 1) showSlide(index+1);
    });
    prevBtn.addEventListener('click', ()=>{ if(index > 0) showSlide(index-1); });

    // keyboard support
    document.addEventListener('keydown', (e)=>{
      if(e.key === 'ArrowRight') nextBtn.click();
      if(e.key === 'ArrowLeft') prevBtn.click();
      if(e.key === 'Escape' && modal.classList.contains('show')) modal.classList.remove('show');
    });

    // clicking the tiny secret (or pressing it) opens the letter modal
    secretBtn.addEventListener('click', ()=>{ modal.classList.add('show'); });
    closeLetter.addEventListener('click', ()=>{ modal.classList.remove('show'); });

    // start with first slide after a short intro delay
    setTimeout(()=>{ showSlide(0); }, 700);

    // accessibility: focus on next button for quick use
    nextBtn.focus();
  </script>
</body>
</html>
